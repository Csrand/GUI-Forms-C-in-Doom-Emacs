<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MeuFormulario.MainWindow"
        Width="400" Height="300"
        Title="Cadastro de Bolas">

    <StackPanel Margin="10" Spacing="5">
        <TextBox x:Name="CorBox" Watermark="Cor da bola"/>
        <TextBox x:Name="CircunferenciaBox" Watermark="circunferencia da bola"/>
        <TextBox x:Name="MaterialBox" Watermark="Cor do material da bola"/>
        <Button Content="Cadastrar" Click="BtnCadastrar_Click"/>
        <Button Content="Imprimir" Click="BtnImprimir_Click"/>
        <TextBlock x:Name="Resultado" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
