<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MeuFormulario.MainWindow"
        Width="400" Height="300"
        Title="Cadastro de Pessoas">

    <StackPanel Margin="10" Spacing="5">
        <TextBox x:Name="NomeBox" Watermark="Nome da pessoa"/>
        <TextBox x:Name="IdadeBox" Watermark="Idade da pessoa"/>
        <Button Content="Cadastrar" Click="BtnCadastrar_Click"/>
        <Button Content="Imprimir" Click="BtnImprimir_Click"/>
        <TextBlock x:Name="Resultado" TextWrapping="Wrap"/>
    </StackPanel>
</Window>
